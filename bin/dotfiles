#!/bin/bash
set -e

## SCRIPT ONLY SUPPORTS FEDORA.
#osid="$(cat /etc/os-release | grep -e '^ID=' | awk -F = '{ print $2 }')"
#if [[ "$osid" != "fedora" ]]; then
#  echo 'This script only supports Fedora'.
#  exit 1
#fi

# paths
CONFIG_DIR="$HOME/.config/dotfiles"
DOTFILES_DIR="$HOME/.local/share/dotfiles"
SSH_DIR="$HOME/.ssh"

# install Ansible
if ! [[ -x "$(command -v ansible)" ]]; then
  sudo dnf install -y ansible
fi
if ! [[ -x "$(command -v ssh-keygen)" ]]; then
  sudo dnf install -y openssh
fi
if ! [[ -x "$(command -v git)" ]]; then
  sudo dnf install -y git
fi

# generate ssh keys
if ! [[ -f "$SSH_DIR/authorized_keys" ]]; then
  mkdir -p "$SSH_DIR"
  chmod 700 "$SSH_DIR"
  ssh-keygen -b 4096 -t rsa -f "$SSH_DIR/id_rsa" -N "" -C "$USER@$HOSTNAME"
  cat "$SSH_DIR/id_rsa.pub" >> "$SSH_DIR/authorized_keys"
fi

# clone dotfiles repo
if [ ! -d "$DOTFILES_DIR" ]; then
  # repo does not already exist
  CLONE_URL="https://github.com/hbjydev/dot.git"
  git clone "$CLONE_URL" "$DOTFILES_DIR"
else
  # repo does already exist
  git -C "$DOTFILES_DIR" pull
fi

# enter dotfiles dir
cd "$DOTFILES_DIR"

# update galaxy deps
ansible-galaxy install -r requirements.yaml

if [[ -f "$CONFIG_DIR/vault-password.txt" ]]; then
  ansible-playbook -K --diff --extra-vars "@$CONFIG_DIR/values.yaml" --vault-password-file "$CONFIG_DIR/vault-password.txt" "$DOTFILES_DIR/main.yaml"
else
  ansible-playbook -K --diff --extra-vars "@$CONFIG_DIR/values.yaml" "$DOTFILES_DIR/main.yaml"
fi

